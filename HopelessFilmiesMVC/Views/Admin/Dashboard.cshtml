@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom styles for the admin dashboard buttons */
    body {
        background-color: #1a1a1a; /* Dark background */
        font-family: 'Inter', sans-serif; /* Using Inter font */
        color: #f0f0f0; /* Light text color for general content */
    }

    h2 {
        color: #ff5733; /* Red color for heading */
        font-size: 2.5em;
        margin-bottom: 20px;
        font-weight: bold;
        text-align: center; /* Center the heading */
    }

    p {
        text-align: center; /* Center the paragraph */
        margin-bottom: 30px;
        font-size: 1.1em;
    }

    .admin-button-group {
        display: flex;
        flex-direction: column; /* Stack buttons vertically */
        gap: 15px; /* Space between buttons */
        width: 100%;
        max-width: 400px; /* Max width for the button group */
        margin: 0 auto; /* Center the button group */
        padding: 20px;
        background-color: #2c2c2c; /* Container background */
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }

    .admin-button {
        background-color: #000000; /* Black button background */
        color: #ff5733; /* Red text color */
        padding: 15px 25px;
        border-radius: 10px; /* Rounded corners for buttons */
        text-decoration: none; /* No underline */
        font-size: 1.1em;
        font-weight: bold;
        text-align: center;
        transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        border: 2px solid #ff5733; /* Red border */
    }

        .admin-button:hover {
            background-color: #ff5733; /* Red background on hover */
            color: #000000; /* Black text on hover */
            box-shadow: 0 0 10px rgba(255, 87, 51, 0.7); /* Glow effect on hover */
        }
</style>

<h2>Welcome, Admin</h2>
<p>This page will allow you to manage films, podcasts, users, etc.</p>

<div class="admin-button-group">
    <a href="@Url.Action("Manage", "Admin", new { category = "ShortFilm" })" class="admin-button">Manage Short Films</a>
    <a href="@Url.Action("Manage", "Admin", new { category = "Movie" })" class="admin-button">Manage Movies</a>
    <a href="@Url.Action("Manage", "Admin", new { category = "Podcasts" })" class="admin-button">Manage Podcasts</a>
    <a href="@Url.Action("Manage", "Admin", new { category = "Exclusive" })" class="admin-button">Manage Exclusive Films</a>
</div>
