@{
    Layout = null;

    var message = ViewBag.Message as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Hopeless Filmies</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style type="text/css">
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Roboto+Slab:wght@700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            background-color: #1a1a1a;
            color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
        }

        .signup-container {
            background-color: #0d0d0d;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.7);
            width: 90%;
            max-width: 480px;
            box-sizing: border-box;
        }

        .signup-title {
            font-family: 'Roboto Slab', serif;
            font-size: 2.5rem;
            color: #E74C3C;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .signup-message {
            color: #FFD700;
            margin-bottom: 25px;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .signup-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
        }

        .signup-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #333;
            border-radius: 8px;
            background-color: #2a2a2a;
            color: #f0f0f0;
            font-size: 1rem;
            box-sizing: border-box;
        }

            .signup-input::placeholder {
                color: #bbb;
            }

            .signup-input:focus {
                border-color: #E74C3C;
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.3);
                outline: none;
            }

        .signup-submit-btn {
            background-color: #E74C3C;
            color: white;
            padding: 1rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.1rem;
            font-weight: 700;
            transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            margin-top: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

            .signup-submit-btn:hover {
                background-color: #C0392B;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
            }

        .signin-link-container {
            margin-top: 25px;
            font-size: 0.95rem;
            color: #ccc;
        }

        .signin-link {
            color: #E74C3C;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .signin-link:hover {
                color: #FFD700;
                text-decoration: underline;
            }

        @@media (max-width: 576px) {
            .signup-container {
                padding: 30px 20px;
            }

            .signup-title {
                font-size: 2rem;
            }

            .signup-message {
                font-size: 1rem;
            }

            .signup-input {
                font-size: 0.95rem;
            }

            .signup-submit-btn {
                padding: 0.9rem 1.2rem;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <h2 class="signup-title">Create Account</h2>
        @if (!string.IsNullOrEmpty(message))
        {
            <p class="signup-message">@message</p>
        }

        <form class="signup-form" method="post" asp-action="SignUp" asp-controller="Account">
            <input type="text" name="fullName" placeholder="Full Name" class="signup-input" required />
            <input type="email" name="email" placeholder="Email Address" class="signup-input" required />
            <input type="password" name="password" placeholder="Password" class="signup-input" required />
            <input type="password" name="confirmPassword" placeholder="Confirm Password" class="signup-input" required />
            <button type="submit" class="signup-submit-btn">Sign Up</button>
        </form>

    </div>
</body>
</html>
